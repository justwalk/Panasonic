/* END Page content */

/* Notification slider */
#notification-slider {
    position: absolute;
    z-index: 1039;
    top:109px;
    right:0;
    bottom: 40px;
    width: 10px;
    background: url(img/notifbox.jpg) repeat-y;
    opacity: 0.2;
    
    div.status {
        position: absolute;
        width: 30px;
        height: 52px;
        
        top: 45%;
        left: -30px;
        
        background: url(img/notify_ico.png) no-repeat;
        .link;
    } 
    .content {
        display: none;
    }
}
#notification-slider.warning {
    opacity: 1;
    
    div.status{
        background: url(img/notify_ico_red.png) no-repeat;
    }
}
#notification-slider.in {
    opacity: 1;
    
    div.status {
        width: 52px;
        .border-radius(25px);    
    }
    
    .content {
        display: inline-block;
        padding: 30px 30px 0 30px;
    }
    
    .message {
        width: 80%;
        margin-bottom: 20px;
    }
    
    .logs {
        padding-top: 0;
        height: 80%;
        overflow-y: auto;
        
        color: @white;
    }
    
    #shadow {
        position: absolute;
        bottom: 0;
        
        width: 100%;
        height: 46px;
        
        background: url(img/notifbox_shadow.png) repeat-x;
    }
}
/* END Notification slider */

/* Bottom navbar */
#bottom-top-navbar {
    bottom: 80px;
    
    .navbar-inner {
