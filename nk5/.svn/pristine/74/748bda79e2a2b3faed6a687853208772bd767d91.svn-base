    }
    
    button[disabled]{
        cursor: default;
        opacity: 0.2;
        color: @evilDisabled;
    }
}

#bottom-navbar{
    z-index: 1039;
    
    button {
        font-weight: bold;
        color: @evil;
        &:hover { color:@evilHover; }
    }
    
    button[disabled]{
        cursor: default;
        opacity: 0;
        &:hover { color: @evil; }
    }   
    
