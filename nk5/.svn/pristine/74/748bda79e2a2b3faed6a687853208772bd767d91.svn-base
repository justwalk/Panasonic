/* Room actions */
#actions {
    .navbar-inner {
        padding: 10px 0;
        background: transparent !important;
        filter: none;
        -webkit-box-shadow: 0px 1px 0px rgba(50, 50, 46, 0.25);
        -moz-box-shadow:    0px 1px 0px rgba(50, 50, 46, 0.25);
        box-shadow:         0px 1px 0px rgba(50, 50, 46, 0.25);
    
        .border-radius(0);
    }
    
    .nav > li {
        a, button, label {
            padding: 10px 5px 0px 5px;
            color: @evil;
            text-decoration: none;
            text-shadow: none;
            font-weight: bold;
            
            &:hover { color: @black; }
        }
        
        button[disabled]{
            cursor: default;
            opacity: 0.7;
            &:hover { color: @evil; } 
        }
        
        form {
            margin-right: 10px;
        }
    }
    
    .nav > li.list-view {
        margin-left: px;
    }
}
/* END Room actions */

